<%= form_with(model: sale, local: true) do |form| %>
  <% if sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
        <% sale.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :receipt_number %>
    <%= form.text_field :receipt_number %>
  </div>

  <div class="field">
    <%= form.label :discount_percentage %>
    <%= form.text_field :discount_percentage %>
  </div>

  <p>Choose a recipe</p>
  <div class="field sales__recipe-items">
    <div class="sales__recipe-item">
      <%= associated_recipe_radios %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
