<p id="notice"><%= notice %></p>

<h1>Recipe Processed Items</h1>

<table>
  <thead>
    <tr>
      <th>Recipe</th>
      <th>Processed item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipe_processed_items.each do |recipe_processed_item| %>
      <tr>
        <td><%= recipe_processed_item.recipe_id %></td>
        <td><%= recipe_processed_item.processed_item_id %></td>
        <td><%= link_to 'Show', recipe_processed_item %></td>
        <td><%= link_to 'Edit', edit_recipe_processed_item_path(recipe_processed_item) %></td>
        <td><%= link_to 'Destroy', recipe_processed_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

