<p id="notice"><%= notice %></p>

<h1>Kitchen Items</h1>

<table class="ui celled definition compact table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kitchen_items.each do |kitchen_item| %>
      <tr>
        <td><%= kitchen_item.name %></td>
        <%= form_button_group do %>
          <%= form_icon kitchen_item, "eye" %>
          <%= form_icon edit_kitchen_item_path(kitchen_item), "pencil" %>
          <%= form_delete_button kitchen_item %>
        <% end %>
      </tr>
    <% end %>
  </tbody>

  <tfoot class="full-width">
  <tr>
    <th colspan="2">
      <%= form_new_button new_inventory_item_path, "New Kitchen Item" %>
    </th>
  </tr>
  </tfoot>
</table>
