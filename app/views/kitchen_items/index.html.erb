<p id="notice"><%= notice %></p>

<h2 class="ui header">
  Kitchen Items
  <div class="sub header">Add raw items</div>
</h2>

<% if @kitchen_items.empty? %>
  <div class="ui placeholder segment">
    <div class="ui icon header">
      <i aria-hidden="true" class="list icon"></i>No items have been added.
    </div>
    <%= form_new_button new_kitchen_item_path, "New Kitchen Item" %>
  </div>
<% else %>
<table class="ui celled definition compact table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kitchen_items.each do |kitchen_item| %>
      <tr>
        <td><%= kitchen_item.name %></td>
        <%= form_button_group do %>
          <%= form_icon kitchen_item, "eye" %>
          <%= form_icon edit_kitchen_item_path(kitchen_item), "pencil" %>
          <%= form_delete_button kitchen_item %>
        <% end %>
      </tr>
    <% end %>
  </tbody>

  <tfoot class="full-width">
  <tr>
    <th colspan="2">
      <%= form_new_button new_kitchen_item_path, "New Kitchen Item" %>
    </th>
  </tr>
  </tfoot>
</table>
<% end %>
