<p id="notice"><%= notice %></p>

<h1>Combined Items</h1>

<table>
  <thead>
    <tr>
      <th>Receipt</th>
      <th>Quantity</th>
      <th>Quantity scale</th>
      <th>Combined</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @combined_items.each do |combined_item| %>
      <tr>
        <td><%= combined_item.receipt_id %></td>
        <td><%= combined_item.quantity %></td>
        <td><%= combined_item.quantity_scale %></td>
        <td><%= combined_item.combined_id %></td>
        <td><%= link_to 'Show', combined_item %></td>
        <td><%= link_to 'Edit', edit_combined_item_path(combined_item) %></td>
        <td><%= link_to 'Destroy', combined_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Combined Item', new_combined_item_path %>
