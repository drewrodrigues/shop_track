<p id="notice"><%= notice %></p>

<h2 class="ui header">
  Inventory
  <div class="sub header">Track your inventory</div>
</h2>

<% if @inventory_items.empty? %>
  <div class="ui placeholder segment">
    <div class="ui icon header">
      <i aria-hidden="true" class="box icon"></i>No inventory has been tracked.
    </div>
    <%= form_new_button new_inventory_item_path, "New Inventory Item" %>
  </div>
<% else %>
  <table class="ui celled definition compact table">
    <thead>
    <tr>
      <th></th>
      <th>Count</th>
      <th>Quantity Per Item</th>
      <th>Total Quantity</th>
      <th>Price</th>
      <th>Cost Per Measurement</th>
      <th>Cost Per Item</th>
      <th colspan="1"></th>
    </tr>
    </thead>

    <tbody>
    <% @inventory_items.each do |inventory_item| %>
      <tr>
        <td><%= inventory_item.kitchen_item_name %></td>
        <td><%= inventory_item.count %></td>
        <td><%= inventory_item.quantity %> <%= inventory_item.quantity_scale %></td>
        <td><%= inventory_item.quantity * inventory_item.count %> <%= inventory_item.quantity_scale %></td>
        <td><%= inventory_item.price %></td>
        <td><%= inventory_item.cost_per_measurement %> / 1 <%= inventory_item.quantity_scale %></td>
        <td><%= inventory_item.cost_per_item %></td>
        <%= form_button_group do %>
          <%= form_icon inventory_item, "eye" %>
          <%= form_icon edit_inventory_item_path(inventory_item), "pencil" %>
          <%= form_delete_button inventory_item %>
        <% end %>
      </tr>
    <% end %>
    </tbody>

    <tfoot class="full-width">
    <tr>
      <th colspan="7">
        <%= form_new_button new_inventory_item_path, "New Inventory Item" %>
      </th>
    </tr>
    </tfoot>
  </table>
<% end %>
