<p id="notice"><%= notice %></p>

<h1>Inventory Items</h1>

<table>
  <thead>
    <tr>
      <th>Kitchen item</th>
      <th>Count</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Cost Per Item</th>
      <th>Quantity scale</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventory_items.each do |inventory_item| %>
      <tr>
        <td><%= inventory_item.kitchen_item_name %></td>
        <td><%= inventory_item.count %></td>
        <td><%= inventory_item.quantity %></td>
        <td><%= inventory_item.price %></td>
        <td><%= inventory_item.cost_per_item %></td>
        <td><%= inventory_item.quantity_scale %></td>
        <td><%= link_to 'Show', inventory_item %></td>
        <td><%= link_to 'Edit', edit_inventory_item_path(inventory_item) %></td>
        <td><%= link_to 'Destroy', inventory_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

